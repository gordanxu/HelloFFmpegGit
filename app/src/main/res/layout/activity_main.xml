<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="存储卡的路径为:"
            android:textColor="@color/colorPrimary"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="复制"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_18" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:text="支持视频YUV裸数据流的抽取，音视频分离，音视频合并，添加视频水印，更换视频音乐背景，视频格式转换等命令"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_16" />

    <EditText
        android:id="@+id/et_command"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_edit_black"
        android:gravity="center_vertical"
        android:hint="请输入命令:ffmpeg..."
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tv_command_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_bg_red"
        android:clickable="true"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white" />

</LinearLayout>